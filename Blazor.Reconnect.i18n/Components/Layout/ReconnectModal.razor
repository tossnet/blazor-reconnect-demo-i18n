<script type="module" src="@Assets["Components/Layout/ReconnectModal.razor.js"]"></script>

<dialog id="components-reconnect-modal" data-nosnippet>
    <div class="components-reconnect-container">
        <div class="components-rejoining-animation" aria-hidden="true">
            <div></div>
            <div></div>
        </div>
        <p class="components-reconnect-first-attempt-visible" data-i18n="Rejoining">
            🛟 Rejoining the server...
        </p>
        <p class="components-reconnect-repeated-attempt-visible" data-i18n="RejoinFailed">
            Rejoin failed... trying again in <span id="components-seconds-to-next-attempt"></span> seconds.
        </p>
        <p class="components-reconnect-failed-visible" data-i18n="FailedToRejoin">
            Failed to rejoin.<br />Please retry or reload the page.
        </p>
        <button id="components-reconnect-button" class="components-reconnect-failed-visible" data-i18n="Retry">
            Retry
        </button>
        <p class="components-pause-visible" data-i18n="Paused">
            The session has been paused by the server.
        </p>
        <button id="components-resume-button" class="components-pause-visible" data-i18n="Resume">
            Resume
        </button>
        <p class="components-resume-failed-visible" data-i18n="FailedToResume">
            Failed to resume the session.<br />Please reload the page.
        </p>
    </div>
</dialog>
